<div class="container-fluid mt-5">
    <div class="card mb-4 wow slideInUp">
        <div class="card-body d-sm-flex justify-content-between">
            <h4 class="mb-2 mb-sm-0 pt-1">
                <span>Обратная связь</span>
            </h4>
        </div>
    </div>
</div>

<div class="container-fluid mt-5">
    <div class="card mt-4">
        <div class="card-body">
            <p><span>Имя: </span>{{customer.name}}</p>
            <p><span>Телефон: </span>{{customer.phone}}</p>
            <p><span>Адрес: </span>{{customer.address}}</p>
        </div>
    </div>
    <div class="card mt-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="blue-grey lighten-4">
                    <tr>
                        <th>#</th>
                        <th>Сообщение</th>
                        <th>Ответ</th>
                        <th>Дата и время отправки</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each contacts}}
                        <tr>
                            <td scope="row">{{id}}</td>
                            <td>{{message}}</td>
                            <td>{{reply}}</td>
                            <td>{{timestamp}}</td>
                            <td>
                                {{#if reply}}
                                {{else}}
                                <a href="/admin/reply?messageId={{id}}">Ответить</a>
                                {{/if}}
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
