<div class="container-fluid mt-5">
    <div class="card mb-4 wow slideInUp">
        <div class="card-body d-sm-flex justify-content-between">
            <h4 class="mb-2 mb-sm-0 pt-1">
                <span>Обратная связь</span>
            </h4>
        </div>
    </div>
</div>

<div class="container-fluid mt-5">
    <div class="card mt-4">
        <div class="card-body">
            <p><span>Имя: </span>{{customer.name}}</p>
            <p><span>Телефон: </span>{{customer.phone}}</p>
            <p><span>Адрес: </span>{{customer.address}}</p>
        </div>
    </div>
    <div class="card mt-4">
        <div class="card-body">
            <div class="table-responsive">
                <form action="/admin/reply?messageId={{message.id}}" method="POST">
                    <div class="form-group">
                        <label for="reply">Сообщение от покупателя:</label><br />
                        <p>{{message.message}}</p>
                    </div>
                    <div class="form-group">
                        <label for="reply">Ответ:</label><br />
                        {{#if error}}
                        <textarea name="reply" id="reply" cols="90" rows="5" style="border-color: red;"></textarea>
                        {{else}}
                        <textarea name="reply" id="reply" cols="90" rows="5"></textarea>
                        {{/if}}
                    </div>
                    <button class="btn " type="submit">Отправить</button>
                </form>
            </div>
        </div>
    </div>
</div>