<h1>{{title}}</h1>
<p>Вход</p>

{{#if user }}
    <p>Welcome, {{ user.id }}!</p>
{{ else }}
    {{#if error }}
        <p style="color: red">{{error}}</p>
    {{/if}}
    <form action="/login" method="post">
        <p>
            <input name="username">
        </p>
        <p>
            <input type="password" name="password">
        </p>
        <p>
            <input type="submit" value="Войти">
        </p>
    </form>
{{/if}}

